<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="carter.streakly.WelcomeInfo$PlaceholderFragment">

    <ImageView
        android:id="@+id/streakly_text_logo_welcome"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/streakly_text_logo"/>

    <TextView
        android:id="@+id/main_paragraph_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/streakly_text_logo_welcome"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"/>

    <Button
        android:id="@+id/welcome_page_logo"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/acceptColor"
        android:onClick="goToMain"
        android:text="Get Started!"
        android:textSize="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="60dp"/>

</RelativeLayout>
