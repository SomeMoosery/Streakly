<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_background"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="carter.streakly.EnlargedActivity">

    <TextView
        android:id="@+id/activity_enlarge_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="60dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/activity_enlarge_days_kept_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:layout_gravity="center"
        android:layout_below="@+id/activity_enlarge_icon"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/countdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_above="@+id/enlarged_activity_logo"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/streakly_icon"
        android:id="@+id/enlarged_activity_logo"
        android:layout_gravity="center"
        android:layout_above="@+id/linearLayout5"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout5">

        <Button
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight=".50"
            android:text="Edit"
            android:id="@+id/edit_enlarge_button"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/date_started_enlarge_icon"
            android:background="@color/acceptColor"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight=".50"
            android:text="Back"
            android:id="@+id/back_to_all_streaks_button"
            android:layout_alignBottom="@+id/edit_enlarge_button"
            android:layout_alignParentEnd="true"
            android:background="@color/backColor"/>
    </LinearLayout>

</RelativeLayout>
